{
  "$schema": "./schema.json",
  "scene": {
    "name": "Phase 3 Full Demo",
    "description": "Complete 3D CMS demo with all features",
    "mode": "edit"
  },
  "modules": [
    "ground",
    "camera",
    "movement",
    "collision",
    "gravity",
    "physics",
    "lighting",
    "shadow",
    "material",
    "sky",
    "asset",
    "interaction",
    "ui",
    "performance",
    "gizmo",
    "properties"
  ],
  "optionalModules": {
    "infiniteGround": {
      "enabled": false,
      "chunkSize": 50,
      "viewDistance": 3,
      "height": 0,
      "heightVariation": false,
      "subdivisions": 10,
      "material": {
        "diffuse": "https://playground.babylonjs.com/textures/grass.png",
        "normal": "https://playground.babylonjs.com/textures/grassn.png",
        "tiling": { "u": 10, "v": 10 }
      }
    },
    "physics": {
      "enabled": true
    }
  },
  "demoObjects": [
    {
      "type": "box",
      "name": "Red Box",
      "position": { "x": 0, "y": 1, "z": 0 },
      "size": 2,
      "material": {
        "type": "standard",
        "diffuseColor": { "r": 1, "g": 0, "b": 0 }
      }
    },
    {
      "type": "sphere",
      "name": "Green Sphere",
      "position": { "x": 4, "y": 1.5, "z": 0 },
      "diameter": 2,
      "material": {
        "type": "standard",
        "diffuseColor": { "r": 0, "g": 1, "b": 0 }
      }
    },
    {
      "type": "cylinder",
      "name": "Blue Cylinder",
      "position": { "x": -4, "y": 1.5, "z": 0 },
      "height": 3,
      "diameter": 1.5,
      "material": {
        "type": "standard",
        "diffuseColor": { "r": 0, "g": 0, "b": 1 }
      }
    },
    {
      "type": "torus",
      "name": "Yellow Torus",
      "position": { "x": 0, "y": 1, "z": 4 },
      "diameter": 2,
      "thickness": 0.5,
      "material": {
        "type": "standard",
        "diffuseColor": { "r": 1, "g": 1, "b": 0 }
      }
    },
    {
      "type": "plane",
      "name": "Wall",
      "position": { "x": 0, "y": 2, "z": 8 },
      "width": 10,
      "height": 4,
      "rotation": { "x": 0, "y": 0, "z": 0 },
      "material": {
        "type": "standard",
        "diffuseColor": { "r": 0.5, "g": 0.5, "b": 0.5 }
      }
    }
  ],
  "ui": {
    "templates": [
      "properties-panel",
      "loading-screen",
      "welcome-message",
      "mode-toggle",
      "control-panel"
    ],
    "showWelcome": false,
    "showInstructions": true
  },
  "performance": {
    "targetFPS": 60,
    "showStats": true
  }
}
